<% content_for(:html_title) { 'Edit Post | Hicon' } %>
<title><%= @title %></title>

<% if user_signed_in? %>
	<% if @post.user_id.to_i == current_user.id %>

		<h1>Editing Post</h1>

		<%= render 'form', post: @post %>

		<%= link_to 'Preview Post', @post %>

	<% else %>
		<div class="alert alert-info alert-dismissible fade in">
			<a href="/" class="close" data-dismiss="alert" aria-label="close">&times;</a>
			<strong>Sorry You Can't Edit This Particular Post</strong>
		</div>
	<% end %>
<% end %>

