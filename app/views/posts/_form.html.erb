<%= form_with(model: post, local: true, html: { multipart: true }) do |form| %>
  <div class="container">
	  <% if post.errors.any? %>
		<div id="error_explanation">
		  <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

		  <ul>
		  <% post.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		  <% end %>
		  </ul>
		</div>
	  <% end %>

		
		<div class="form-group">
			<%= form.text_field :note_title, class: 'form-control', placeholder: 'Title', id: 'title', required: true %>
		</div>
		
		<div class="form-group">
			<%= form.file_field :attachment, class: 'form-control', id: 'attachment' %>
		</div>
	  
		<div class="form-group">
			<%= form.text_area :note_text, class: 'form-control', placeholder: 'Article', cols: '2', rows: '10', id: 'article', required: true %>
		</div>
		
		<div class="form-group">
			<%= form.text_field :username, class: 'form-control', value: current_user.username, type: 'hidden' %>
			<%= form.text_field :lname, class: 'form-control', value: current_user.lname, type: 'hidden' %>
			<%= form.text_field :fname, class: 'form-control', value: current_user.fname, type: 'hidden' %>
			<%= form.text_field :user_id, class: 'form-control', value: current_user.id, type: 'hidden' %>
		</div>
		
		<div class="col-md-4">
			<div class="actions">
				<%= form.submit "Publish", :class => "btnSubmit" %>
			</div>
			<br/>
        </div>
		
		<div class="col-md-4">
			<button type="button" onclick="RCB()" class="btnSubmit">Clear</button>
			<br/>
			<br/>
        </div>
		
		<div class="col-md-4">
			<button type="button" class="btnSubmit" onclick="relocate_home()">View Post(s)</button>
        </div>
		
		
	</div>
<% end %>
