<% content_for(:html_title) { 'Edit Profile | Hicon' } %>
<title><%= @title %></title>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


		<div class="container register-form">
            <div class="form">
                <div class="note">
                    Edit My profile | <%= link_to "Home", root_path, :style=>"color: #fff;", :class => "home_links" %>
                </div>
				
				<div class="form-content">
                    <div class="row">
					
                        <div class="col-md-6">
						
							<div class="inner-addon left-addon">
								<i class="glyphicon glyphicon-user"></i>
								<%= f.text_field :fname, class: 'form-control', placeholder: 'Firstname'%>
							</div>
							
							<br/>
							
							<div class="inner-addon left-addon">
								<i class="glyphicon glyphicon-user"></i>
								<%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
							</div>
							<br/>
                        </div>
						
						<div class="col-md-6">
						
							<div class="inner-addon left-addon">
								<i class="glyphicon glyphicon-user"></i>
								<%= f.text_field :lname, class: 'form-control', placeholder: 'Lastname' %>
							</div>
							<br/>
							<div class="inner-addon left-addon">
								<i class="glyphicon glyphicon-envelope"></i>
								<%= f.email_field :email, class: 'form-control', placeholder: 'E-mail' %>
							</div>
							<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
								<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
							<% end %>
							<br/>
                        </div>
						
						<div class="col-md-6">
							
							<div class="inner-addon left-addon">
								<i id="pass_status" onClick="viewPassword()" class="glyphicon glyphicon-eye-open"></i>
								<%= f.password_field :password, autocomplete: "new-password", class: 'form-control', id: 'pwd1', placeholder: "leave blank if you don't want to change it (6 characters minimum)" %>
							</div>
							<br/>
                        </div>
						
						<div class="col-md-6">
							
							<div class="inner-addon left-addon">
								<i class="glyphicon glyphicon-lock"></i>
								<%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirm New Password' %>
							</div>
							<br/>
                        </div>
						
						<div class="col-md-6">
						
							<div class="inner-addon left-addon">
								<i class="glyphicon glyphicon-lock"></i>
								<%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', placeholder: 'Current Password' %>
							</div>
							<br/>
                        </div>
						
						<div class="col-md-6">
							
							<div class="actions">
								<%= f.submit "Update", :class => "btnSubmit" %>
								<% end %>
							</div>
							<br/>
                        </div>
						
						<div class="col-md-6">
							
								<h3>Delete My Account</h3>
							<br/>
                        </div>
						
						<div class="col-md-6">
							
								<%= button_to "Delete My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-danger danger-home" %>
							</br>
                        </div>
						
                    </div>
                    
                </div>
                
            </div>
        </div>
		

