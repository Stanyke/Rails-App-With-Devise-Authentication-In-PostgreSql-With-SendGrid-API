<% content_for(:html_title) { 'Register | Hicon' } %>
<title><%= @title %></title>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
	
	
	<div class="container register-form">
            <div class="form">
                <div class="note">
                    Register With Us | <%= link_to "Login", new_user_session_path, :style=>"color: #fff;", :class => "home_links" %>
                </div>

                <div class="form-content">
                    <div class="row">
					
                        <div class="col-md-6">
						
							<div class="inner-addon left-addon">
								<i class="glyphicon glyphicon-user"></i>
								<%= f.text_field :fname, class: 'form-control', placeholder: 'Firstname', :required => true%>
							</div>
							
							<br/>
							
							<div class="inner-addon left-addon">
								<i class="glyphicon glyphicon-user"></i>
								<%= f.text_field :username, class: 'form-control', placeholder: 'Username', :required => true %>
							</div>
							<br/>
                        </div>
						
						<div class="col-md-6">
						
							<div class="inner-addon left-addon">
								<i class="glyphicon glyphicon-user"></i>
								<%= f.text_field :lname, class: 'form-control', placeholder: 'Lastname', :required => true %>
							</div>
							<br/>
							<div class="inner-addon left-addon">
								<i class="glyphicon glyphicon-envelope"></i>
								<%= f.email_field :email, class: 'form-control', placeholder: 'E-mail', :required => true %>
							</div>
							<br/>
                        </div>
						
						<div class="col-md-6">
							
							<div class="inner-addon left-addon">
								<i id="pass_status" onClick="viewPassword()" class="glyphicon glyphicon-eye-open"></i>
								<%= f.password_field :password, autocomplete: "off", class: 'form-control', id: 'pwd1', placeholder: 'Password (6 characters minimum)' %>
							</div>
							<br/>
                        </div>
						
						<div class="col-md-6">
							
							<div class="inner-addon left-addon">
								<i class="glyphicon glyphicon-lock"></i>
								<%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
							</div>
							<br/>
                        </div>
						
						<div class="col-md-12">
							
							<div class="actions">
								<%= f.submit "Register", :class => "btnSubmit btn-danger" %>
							</div>
							<% end %>
							
                        </div>
						
                    </div>
                    
                </div>
            </div>
        </div>

  


