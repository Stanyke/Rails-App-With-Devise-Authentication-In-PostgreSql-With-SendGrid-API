<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

	<div class="container register-form">
        <div class="form">
            <div class="note">
                Login | <a href="/users/sign_up" class="home_links">Register</a> | <a href="/users/password/new" class="home_links">Forgot Password?</a>
			</div>

            <div class="form-content">
                <div class="row">
					
					<div class="col-md-6">
						
						<div class="inner-addon left-addon">
							<i class="glyphicon glyphicon-user"></i>
							<%= f.email_field :email, class: 'form-control', placeholder: 'Example@mail.com', :required => true %>
						</div>
						
						<br/>
                    </div>
						
					<div class="col-md-6">
						<div class="inner-addon left-addon">
							<i class="glyphicon glyphicon-user"></i>
							<%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: '********', :required => true %>
						</div>
						
						<br/>
                    </div>
						
					<div class="col-md-6">
						<% if devise_mapping.rememberable? %>
							<div class="inner-addon left-addon">
								<%= f.check_box :remember_me, type: 'checkbox' %>
								<%= f.label :remember_me %>
							</div>
						<% end %>
						<br/>
                    </div>
						
					<div class="col-md-6">
						<div class="actions">
							<%= f.submit "Log in", :class => "btnSubmit" %>
						</div>
					</div>
						
                </div>
                    
            </div>
        </div>
    </div>
<% end %>